doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet' href='https://unicons.iconscout.com/release/v4.0.0/css/line.css')
  link(rel='stylesheet' href='css/foregistration.css')
  title Agricultural Officer Registration
.container
  header.heading Agricultural Officer Registration
  hr
  form(action='/aoregister' method='post' onsubmit="return formValidateao(event);")
    .form.first
      .details.personal
        .fields
          .input-field
            label Unique ID.
            input#uniqueid(type='text' name='uniqueid' autocomplete="off" placeholder='Unique ID')
            small#uniqueidError
          .input-field
            label Role
            select#role(type='text' name='role')
              option(value='') Select role
              option(value='agricofficer') Agric. Officer 
            small#roleError
          .input-field
            label First and Last Name
            input#fullname(type='text' name='fullname' placeholder='Enter full name')
            small#fullNameError
          .input-field
            label NIN
            input#nin(type='text' name='nin' placeholder='Enter NIN')
            small#ninError
          .input-field
            label Date of Birth
            input#dob(type='date' name='dob' placeholder='Date of birth')
            small#dobError
          .input-field
            label Date of Registration
            input#doreg(type='date' name='doreg' placeholder='Date of Registration')
            small#doregError
          .input-field
            label Phone Number
            input#phone(type='text' name='phone' placeholder='Phone number')
            small#phoneNumberError
          .input-field
            label Password 
            input#password(type='password' name='password' placeholder='Password')
            small#passwordError  
          .input-field
            label.details Confirm Password
            input#confirmPassword(type='password' name='confirmpassword' placeholder='Confirm Password')
            small#confirmPasswordError
          .input-field
            label Gender
            select#gender(type='text' name='gender')
              option(value='') Select gender
              option(value="Male") Male
              option(value="Female") Female
            small#genderError
          .input-field
            label Home Address
            input#address(type='text' name='address' placeholder='Home directions')
            small#addressError 
      .button
          input#btnSubmit(type='submit' value='Register')
  script(src="/JS/form_validationao.js") 

