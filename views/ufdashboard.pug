doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css' rel='stylesheet')
  link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css')
  link(rel='stylesheet' href='css/ufdashboard.css')
  title Urban Farmer Dashboard
#wrapper.d-flex
  // Sidebar
  #sidebar-wrapper
    .sidebar-heading.text-left.py-4.fs-4.fw-bold.text-uppercase.border-bottom Ufarm
    .list-group.list-group-flush.my-3
      a.list-group-item.list-group-item-action.bg-transparent.second-text.active(href='#')
      a.list-group-item.list-group-item-action.bg-transparent.second-text.fw-bold(href='/addproduceroute') Upload Produce
      a.list-group-item.list-group-item-action.bg-transparent.second-text.fw-bold(href='/producelist') Uploaded Produce List
  #page-content-wrapper
    nav.navbar.navbar-expand-lg.navbar-light.bg-transparent.py-4.px-4
      .d-flex.align-items-center
            h2.text-white Urban Farmer Dashboard
      button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarSupportedContent.collapse.navbar-collapse
        ul.navbar-nav.ms-auto.mb-2.mb-lg-0
          li.nav-item.dropdown
            a#navbarDropdown.nav-link.dropdown-toggle.second-text.fw-bold(href='#' role='button' data-bs-toggle='dropdown' aria-expanded='false')
              span.text-white #{currentUser.fullname}
        form(method="post" action="/logout")
            button.btn.btn-success.btn-block(type="submit") Log out
    .container-fluid.px-4
      .row.g-3.my-2
        .col-md-3
          .p-3.bg-white.shadow-sm.d-flex.justify-content-around.align-items-center.rounded
            div
              h3.fs-2 1,000
              p.fs-5 Farmers in Ward
        .col-md-3
          .p-3.bg-white.shadow-sm.d-flex.justify-content-around.align-items-center.rounded
            div
              h3.fs-2 600,000
              p.fs-5 Ward Sales
        .col-md-3
          .p-3.bg-white.shadow-sm.d-flex.justify-content-around.align-items-center.rounded
            div
              h3.fs-2 12
              p.fs-5 Registrations
        .col-md-3
          .p-3.bg-white.shadow-sm.d-flex.justify-content-around.align-items-center.rounded
            div
              h3.fs-2 10
              p.fs-5 Uploads
      .row.my-5
        .col
          h3.fs-4.mb-3.text-white Recent Uploads
          table.table.bg-white.rounded.shadow-sm.table-hover
            thead
              tr
                th(scope='col' width='50') #
                th(scope='col') Product
                th(scope='col') Qty
                th(scope='col') Price
            tbody
              tr
                th(scope='row') 1
                td Matoke
                td 10
                td 12,000
              tr
                th(scope='row') 2
                td Beans
                td 100
                td 100,000
              tr
                th(scope='row') 3
                td Maize
                td 200
                td 200,000
              tr
                th(scope='row') 4
                td Cassava
                td 50
                td 50,000
              tr
                th(scope='row') 5
                td Maize
                td 400
                td 400,000
        .col
          h3.fs-4.mb-3.text-white Pending Uploads
          table.table.bg-white.rounded.shadow-sm.table-hover
            thead
              tr
                th(scope='col' width='50') #
                th(scope='col') Product
                th(scope='col') Quantity
                th(scope='col') Price
            tbody
              tr
                th(scope='row') 1
                td Matoke
                td 10
                td 12,000
              tr
                th(scope='row') 2
                td Beans
                td 100
                td 100,000
              tr
                th(scope='row') 3
                td Maize
                td 200
                td 200,000
              tr
                th(scope='row') 4
                td Cassava
                td 50
                td 50,000
              tr
                th(scope='row') 5
                td Maize
                td 400
                td 400,000
      // Farmer Table
      .row.my-5
        .col
          h3.fs-4.mb-3.text-white Current Balances
          table.table.bg-white.rounded.shadow-sm.table-hover
            thead
              tr
                th(scope='col' width='50') #
                th(scope='col') Product
                th(scope='col') Quantity(Kg)
                th(scope='col') Balance(Shs)
            tbody
              tr
                th(scope='row') 1
                td Matoke
                td 40
                td 12,000
              tr
                th(scope='row') 2
                td Beans
                td 60
                td 100,000
              tr
                th(scope='row') 3
