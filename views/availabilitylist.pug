extends layoutlists 
block content
    header.card-header
        h4.card-title List of Approved Products 
    br
    nav
    #nav-tab.nav.nav-tabs(role='tablist')
        a#nav-profile-tab.nav-item.nav-link(href='/producelist') 
    #nav-tabContent.tab-content
    br
    table.table.table-bordered 
        thead
            tr
                th Produce Name
                th Quantity
                th Unit Price
                th Total Amount
                th Product Type
                th Mode of Payment
                th Mode of Delivery
                th Image 
                th Change Availability 
        tbody
            if products.length
                each product in products
                    if product.status=='Approved' && product.ward === currentUser.ward
                        tr
                            td #{product.productname}
                            td #{product.quantity}
                            td #{product.unitprice}
                            td #{product.totalamount}
                            td #{product.producttype}
                            td #{product.modeofpay}
                            td #{product.deliverymode}
                            td 
                                img(src="/"+product.uploadimage, alt="Image" width='150px' height="150px")
                            td
                                a.btn.btn-secondary.btn-block(href='/produce/available/'+product._id) Available
                                div.form-row
block footer
    div.col-md-12 
