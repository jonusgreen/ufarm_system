doctype html
head
  title UFarm
  // Required meta tags
  meta(charset='utf-8')
  meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
  // Bootstrap CSS v5.2.0-beta1
  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css' integrity='sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx' crossorigin='anonymous')
  link(rel="stylesheet", href="css/orders.css")
header
    nav.navbar.fixed-top.navbar-expand-lg.bg-white
        .container
            a.navbar-brand.logo-text(href='#') UFARM
            button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarNav' aria-controls='navbarNav' aria-expanded='false' aria-label='Toggle navigation')
                span.navbar-toggler-icon
            #navbarNav.collapse.navbar-collapse
                ul.navbar-nav.ms-auto
                    li.nav-item
                        a.nav-link.active(aria-current='page' href='/index') Home              
                    li.nav-item
                        a.nav-link(href='/poultry') Poultry
                    li.nav-item
                        a.nav-link(href='/horticulture') Horticulture
                    li.nav-item
                        a.nav-link(href='/dairy') Dairy
    .container.my-5
        .row.justify-content-center.align-items-center.g-2.my-5
            .col.my-5
                .row
                    if poultryProduces.length
                        each poultryproduce in poultryProduces
                            if poultryproduce.availability == 'available' && poultryproduce.status == 'Approved' && poultryproduce.productcategory == "Poultry"
                                .col-3
                                        .card-body
                                            img#hortimg(src="/"+poultryproduce.uploadimage, alt="uploadimage")
                                            h5.card-title Address: #{poultryproduce.ward}
                                            h5.card-title Type: #{poultryproduce.producttype}
                                            h5.card-title Unit Price: #{new Intl.NumberFormat().format(poultryproduce.unitprice)} UGX  
                                            h5.card-title Contact: #{poultryproduce.phone}
                                            a.btn(href='/produce/order/'+poultryproduce._id) Order

