doctype html
head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css' rel='stylesheet')
    title Produce Update

body
    style.
        body{
          background: linear-gradient(135deg, #0d5032, rgba(20,20,20));;  
        }
    
        .form-style{
        position: relative;
        max-width: 1200px;
        width: 1000px;
        border-radius: 6px;
        padding: 10px;
        background-color: #fff;
        box-shadow: 0 5px 10px rgba(0,0,0,0.1);
        margin-left: 345px;
        margin-top: 80px;
        }

       .form-field{
            width: 110px;
            font-weight:300;
            margin-left: 70px; 
            font-family: Sans-serif;
            margin-top: 2px;
           
        }

        label {
        display: inline-block;
        width: 150px;
        text-align: left;
        font-weight:500; 
        }

        .form-field input, select{
            text-align: center;
            background: #fff;
            margin:20px;
            width: 280px;
            height: 50px;
            border-radius: 5px;
            display: inline-block;
            border: 1px solid grey;
        }


        .form-field .btn{
            margin-top:60px;
            padding-bottom: 25px;
            text-align: center;
            background-color: #010d04;
            border-radius: 5px;

        }
        .form-field label{
           width: 150px;
           margin-left: 24px;
           font-weight: 600;
           color: gray;
        }

        .btn{
            padding: 18px;
            font-size:20px;
            color: #fff;
            

        }
        .btn:hover{
           box-shadow:5px 10px;
           color: red; 
        }

        h3{
        text-align: center; 
        padding: 10px; 
        }

     
    .container-fluid.form-style
        form#signup.form(action='/produce/update?id='+product._id name='pdtupdate' method='POST' onload='return multiply();')
            h3 Update Produce 
            hr
            .row
                .col
                    .form-field
                        label Produce Name:
                        select(name='productname')
                            option(value="Beans" selected = product.productname === 'Beans') Beans
                            option(value="Maize" selected = product.productname === 'Maize') Maize
                            option(value="Tomatoes" selected = product.productname === 'Tomatoes') Tomatoes
                            option(value="Cabbage" selected = product.productname === 'Cabbage') Cabbage
                            option(value="Chicken" selected = product.productname === 'Chicken') Chicken 
                            option(value="Eggs" selected = product.productname === 'Eggs') Eggs 
                            option(value="Milk" selected = product.productname === 'Milk') Milk
                            option(value="Sweetpepper" selected = product.productname === 'Sweetpepper') Sweetpepper 
                            option(value="Okra" selected = product.productname === 'Okra') Okra
                            option(value="Calves" selected = product.productname === 'Calves') Calves
                            option(value="Ghee" selected = product.productname === 'Ghee') Ghee
                            option(value="Chicks" selected = product.productname === 'Chicks') Chicks
                            option(value="Cheese" selected = product.productname === 'Cheese') Cheese       
                .col
                    .form-field
                        label Quantity:                
                        input#quantity(type='number' name='quantity' autocomplete='off' value=product.quantity onchange='multiply();')
            .row
                .col
                    .form-field
                        label Unit Price:      
                        input#unitprice(type='number' name='unitprice' autocomplete='off' value=product.unitprice onchange='multiply();')
                .col
                    .form-field
                        label Total Amount:
                        input#totalamount(type='number' name='totalamount' autocomplete='off' value=product.totalamount)    
            .row
                .col
                    .form-field
                        label Product Type:
                        select(name='producttype')
                            option(value="organic" selected = product.producttype === 'organic') Organic
                            option(value="nonorganic" selected = product.producttype === 'nonorganic') Non Organic
                .col
                    .form-field
                        label Mode of Payment:
                        select(name='modeofpay')
                            option(value="cash" selected = product.modeofpay === 'cash') Cash
                            option(value="mobilemoney" selected = product.modeofpay === 'mobilemoney') Mobile Money
            .row
                .col
                    .form-field
                        label Mode of Delivery:
                        select(name='deliverymode')
                            option(value="pickup") Pick Up
                            option(value="homedelivery") Home Delivery            
                .col
                    .form-field
                        input.btn(type='submit' value='Update')
            hr
    script(src="/JS/calculator.js")

